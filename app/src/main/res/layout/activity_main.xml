<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"


    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appbar"

        android:layout_width="match_parent"
        android:layout_height="74dp"
        android:background="@color/purple_700" />

    <androidx.core.widget.NestedScrollView
        android:id="@+id/nestedScrollView"
        android:layout_width="match_parent"


        android:layout_height="match_parent"
        app:layout_anchor="@+id/nestedScrollView"
        app:layout_anchorGravity="center"
        app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">


                <ImageButton
                    android:id="@+id/previousweekarrow"
                    android:layout_width="56dp"
                    android:layout_height="52dp"
                    android:background="#00FFFFFF"
                    android:contentDescription="@string/todo"
                    android:tint="@color/colorPrimaryDark"
                    app:srcCompat="@android:drawable/ic_media_previous" />

                <View
                    android:id="@+id/divider3"
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="#03FFFFFF" />

                <ImageView
                    android:id="@+id/Calenderimage"
                    android:layout_width="34dp"
                    android:layout_height="match_parent"
                    android:background="#08FFFFFF"
                    android:contentDescription="@string/weekday"
                    android:tint="@color/colorPrimaryDark"
                    android:src="@drawable/ic_calendar_24dp" />

                <TextView
                    android:id="@+id/Mainday"
                    android:layout_width="107dp"
                    android:layout_height="50dp"
                    android:background="#03FFFFFF"
                    android:clickable="true"
                    android:fontFamily="serif-monospace"
                    android:gravity="center"
                    android:text="@string/Mainday"
                    android:textColor="@color/colorPrimary"
                    android:textSize="30sp"
                    android:textStyle="bold"
                    android:typeface="serif"
                    android:focusable="true" />


                <View
                    android:id="@+id/divider"
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="#07FFFFFF" />

                <ImageButton
                    android:id="@+id/nextweekarrow"
                    android:layout_width="56dp"
                    android:layout_height="52dp"
                    android:background="#00FFFFFF"
                    android:contentDescription="@string/todo"
                    android:tint="@color/colorPrimaryDark"
                    app:srcCompat="@android:drawable/ic_media_next" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayout2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout">

                <View
                    android:id="@+id/divider4"
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="#03FFFFFF" />

                <TextView
                    android:id="@+id/textViewmonth"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#03FFFFFF"
                    android:fontFamily="serif-monospace"
                    android:gravity="center"
                    android:text="@string/month"
                    android:textColor="@color/colorPrimary"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:typeface="serif" />

                <TextView
                    android:id="@+id/textViewcomma"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#03FFFFFF"
                    android:fontFamily="serif-monospace"
                    android:gravity="center"
                    android:text="@string/comma"
                    android:textColor="@color/colorPrimary"
                    android:textSize="30sp"
                    android:textStyle="bold"
                    android:typeface="serif" />

                <TextView
                    android:id="@+id/textViewyear"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#03FFFFFF"
                    android:fontFamily="serif-monospace"
                    android:gravity="center"
                    android:text="@string/year"
                    android:textColor="@color/colorPrimary"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:typeface="serif" />

                <View
                    android:id="@+id/divider5"
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="#07FFFFFF" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayout3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"

                app:layout_constraintTop_toBottomOf="@+id/linearLayout2">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/horizontalrecycler"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayout4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout3">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/verticalrecycler"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                </androidx.recyclerview.widget.RecyclerView>
            </LinearLayout>


        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>


</androidx.coordinatorlayout.widget.CoordinatorLayout>